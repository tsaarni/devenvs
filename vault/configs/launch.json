{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Vault dev server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "buildFlags": "-tags=vault",
            "args": ["server", "-dev", "-dev-root-token-id=root"],
            "console": "integratedTerminal"
        },
        {
            "name": "Vault with etcd",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "buildFlags": "-tags=vault",
            "args": ["server", "-config", "${env:HOME}/work/devenvs/vault/configs/vault-config-etcd.hcl "],
            "console": "integratedTerminal"
        },
        {
            "name": "Attach remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 8181,
            "host": "127.0.0.1",
        },
    ]
}
